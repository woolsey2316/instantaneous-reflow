{
  "name": "tailwindcss-parcel-starter",
  "version": "1.0.0",
  "description": "A simple tailwind starter project with parcel",
  "scripts": {
    "copy": "ncp ./src/assets/images dist/images",
    "dev": "npm run copy && parcel serve src/index.html",
    "prod": "parcel build src/index.html",
    "build": "parcel build pages/index.hbs --out-dir public --no-cache && node postbuild.js"
  },
  "repository": "https://github.com/SantiMA10/tailwindcss-parcel-starter.git",
  "author": "David Woolsey",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "parcel": "^2.0.0-nightly.286",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3"
  },
  "assetsPath": "src/assets/images",
  "dependencies": {
    "parcel-plugin-asset-copier": "^1.1.0"
  }
}
